@model IEnumerable<LibraryAutomationSystem.Models.BranchesSet>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste</title>
</head>
<body>
    <p>
        @Html.ActionLink("Ekle", "BranchAU", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BranchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchCity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchCity)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "BranchAU", new { id = item.BranchId }) |
                    @Html.ActionLink("Sil", "Sil", new { id = item.BranchId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
